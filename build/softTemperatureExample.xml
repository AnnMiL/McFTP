<?xml version="1.0" ?>
<experiment name="soft_temperature_sensor_test">
	<duration unit="sec" value="30"/>
	<save_result value="True"/>
	<processor core_number="2" fixed_active="False" fixed_frequency="True"/>
	<temperature_sensors>
		<sensor0 type = "hardware" />
		<sensor1 type = "soft" />
	</temperature_sensors>

	<soft_temperature_sensor_counters>
		<!-- <sensor0 name="perf::PERF_COUNT_HW_CPU_CYCLES:u=0" coefficient_a="1" coefficient_b = "0" /> -->
		<!-- <sensor1 name="PAPI_L2_DCA" coefficient_a="1" coefficient_b = "0" /> -->
		<!-- <sensor2 name="UOPS_EXECUTED" coefficient_a="1" coefficient_b = "0" /> -->
		<sensor1 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_CORE_CYCLES"/>
   <sensor2 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_CORE_CYCLES:e=0"/>
   <sensor3 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_CORE_CYCLES:i=0"/>
   <sensor4 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_CORE_CYCLES:c=0"/>
   <sensor5 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_CORE_CYCLES:t=0"/>
   <sensor6 coefficient_a="1" coefficient_b="0" name="ix86arch::INSTRUCTION_RETIRED"/>
   <sensor7 coefficient_a="1" coefficient_b="0" name="ix86arch::INSTRUCTION_RETIRED:e=0"/>
   <sensor8 coefficient_a="1" coefficient_b="0" name="ix86arch::INSTRUCTION_RETIRED:i=0"/>
   <sensor9 coefficient_a="1" coefficient_b="0" name="ix86arch::INSTRUCTION_RETIRED:c=0"/>
   <sensor10 coefficient_a="1" coefficient_b="0" name="ix86arch::INSTRUCTION_RETIRED:t=0"/>
   <sensor11 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_REFERENCE_CYCLES"/>
   <sensor12 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_REFERENCE_CYCLES:e=0"/>
   <sensor13 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_REFERENCE_CYCLES:i=0"/>
   <sensor14 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_REFERENCE_CYCLES:c=0"/>
   <sensor15 coefficient_a="1" coefficient_b="0" name="ix86arch::UNHALTED_REFERENCE_CYCLES:t=0"/>
   <sensor16 coefficient_a="1" coefficient_b="0" name="ix86arch::LLC_REFERENCES"/>
   <sensor17 coefficient_a="1" coefficient_b="0" name="ix86arch::LLC_REFERENCES:e=0"/>
   <sensor18 coefficient_a="1" coefficient_b="0" name="ix86arch::LLC_REFERENCES:i=0"/>
   <sensor19 coefficient_a="1" coefficient_b="0" name="ix86arch::LLC_REFERENCES:c=0"/>
   <sensor20 coefficient_a="1" coefficient_b="0" name="ix86arch::LLC_REFERENCES:t=0"/>
	</soft_temperature_sensor_counters>
	<tasks>
		<task0 load_type="busy_wait" name="task0" periodicity="periodic" type="singlecore">
			<period unit="ms" value="1000"/>
			<wcets unit="ms" value="[999]"/>
			<attached_core value="0"/>
		</task0>
		<task1 load_type="busy_wait" name="task1" periodicity="periodic" type="singlecore">
			<period unit="ms" value="1000"/>
			<wcets unit="ms" value="[999]"/>
			<attached_core value="1"/>
		</task1>
		
	</tasks>

	
	
	<thermal_approach>
		<kernel type="PBOO">
			<ton unit="ms" value="{15000, 15000}"/>
			<toff unit="ms" value="{10000, 10000}"/>
		</kernel>
	</thermal_approach>
</experiment>
