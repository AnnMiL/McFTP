
<?xml version="1.0" ?>
<experiment name="hotAndCoolTasks">
	<duration unit="sec" value="5"/>
	<save_result value="True"/>
	<processor core_number="4" fixed_active="False" fixed_frequency="False"/>
	<tasks>
		<task0 name="task0" periodicity="periodic" type="singlecore" load_type="busy_wait">
			<period unit="ms" value="50"/>
			<wcets unit="ms" value="[51]"/>
			<attached_cores value="[0]"/>
		</task0>
		<task1 name="task1" periodicity="periodic" type="singlecore" load_type="user_defined">
			<period unit="ms" value="50"/>
			<wcets unit="ms" value="[51]"/>
			<defined_load index="1"/>
			<attached_cores value="[1]"/>
		</task1>
	</tasks>
	<thermal_approach>
		<kernel type="PBOO">
			<ton unit="ms" value="{10000, 10000 10000 10000}"/>
			<toff unit="ms" value="{0, 0, 0, 0}"/>
		</kernel>
	</thermal_approach>
</experiment>
