aux_source_directory(. DIR_CMI_SRCS)
set (CMAKE_CXX_FLAGS "-Wall -g -O3 -std=c++11 -I ../")

add_subdirectory(./interfaces)
add_subdirectory(./benchmarks)
add_subdirectory(./UnitTest)
add_subdirectory(./configuration)
add_subdirectory(./core)
add_subdirectory(./dispatchers)
add_subdirectory(./pthread)
add_subdirectory(./results)
add_subdirectory(./tasks)
add_subdirectory(./taskloads)
add_subdirectory(./performance_counter)
add_subdirectory(./utils)


set(CMI_LIB ${CMAKE_CURRENT_SOURCE_DIR}/libcmi.a)

add_custom_target(combined
        COMMAND ar -x $<TARGET_FILE:UnitTest>
        COMMAND ar -x $<TARGET_FILE:core>
        COMMAND ar -x $<TARGET_FILE:interfaces>
        COMMAND ar -x $<TARGET_FILE:configuration>
        COMMAND ar -x $<TARGET_FILE:dispatchers>
        COMMAND ar -x $<TARGET_FILE:pthread>
        COMMAND ar -x $<TARGET_FILE:results>
        COMMAND ar -x $<TARGET_FILE:tasks>
        COMMAND ar -x $<TARGET_FILE:taskloads>
        COMMAND ar -x $<TARGET_FILE:utils>
        COMMAND ar -x $<TARGET_FILE:performance_counter>
        COMMAND ar -x $<TARGET_FILE:benchmarks>
        COMMAND ar -qcs ${CMI_LIB} *.o
        WORKING_DIRECTORY ${CMAKE_CURRENT_SOURCE_DIR}
        DEPENDS UnitTest core interfaces configuration  dispatchers pthread results tasks taskloads utils performance_counter benchmarks
        )

add_library(cmi STATIC )
add_dependencies(cmi combined)

set_target_properties(cmi PROPERTIES IMPORTED_LOCATION ${CMI_LIB})


















aux_source_directory(. DIR_CMI_SRCS)


set (CMAKE_CXX_FLAGS "-Wall -g -O3 -std=c++11 -I ../")

add_subdirectory(./interfaces)
add_subdirectory(./benchmarks)
add_subdirectory(./UnitTest)
add_subdirectory(./configuration)
add_subdirectory(./core)
add_subdirectory(./dispatchers)
add_subdirectory(./pthread)
add_subdirectory(./results)
add_subdirectory(./tasks)
add_subdirectory(./taskloads)
add_subdirectory(./performance_counter)
add_subdirectory(./utils)



add_library(cmi STATIC  ${DIR_CMI_SRCS} )




target_link_libraries(cmi  UnitTest core interfaces configuration  dispatchers pthread results tasks taskloads utils performance_counter benchmarks)


set_target_properties(cmi PROPERTIES ARCHIVE_OUTPUT_DIRECTORY  ${CMAKE_CURRENT_SOURCE_DIR}/../lib/)




